    </BwRow>

    <BwCard Title="Testimonial Slider" Subtitle="Customer reviews - all pause when hovering over cards"
            Icon="fa-solid fa-quote-left" Color="BwColor.Info">
        <BwMarquee Duration="40" PauseOnHover="true">
            <div class="flex gap-6">
                @foreach (var i in Enumerable.Range(1, 5))
                {
                    <div
                        class="w-80 flex-shrink-0 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 shadow-sm">
                        <div class="flex items-center gap-3 mb-4">
                            <BwAvatar Name="@($"User {i}")" Size="BwSize.Medium"/>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-gray-100">User @i</p>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Company @i</p>
                            </div>
                        </div>
                        <p class="text-gray-600 dark:text-gray-300 text-sm">
                            "Blazwind components are really great! We developed our project very quickly.
                            Tailwind integration is perfect."
                        </p>
                        <div class="flex gap-1 mt-3 text-amber-400">
                            @for (var s = 0; s < 5; s++)
                            {
                                <i class="fa-solid fa-star"></i>
                            }
                        </div>
                    </div>
                }
            </div>
        </BwMarquee>
    </BwCard>

    <BwCard Title="News Ticker" Subtitle="Breaking news - scrolls continuously" Icon="fa-solid fa-newspaper"
            Color="BwColor.Danger">
        <div class="bg-red-600 text-white py-2 rounded-lg overflow-hidden">
