    <BwAlert Color="BwColor.Info" Variant="BwVariant.Soft" Icon="fa-solid fa-info-circle">
        <strong>New Feature:</strong> PauseOnHover now pauses all content - the entire animation stops when you hover
        over any element!
    </BwAlert>

    <BwCard Title="Logo Slider" Subtitle="Brand and partner logos - pauses on hover" Icon="fa-solid fa-building"
            Color="BwColor.Primary">
        <BwMarquee Duration="30" PauseOnHover="true">
            <div class="flex items-center gap-16 px-8">
                <div
                    class="w-32 h-16 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center text-gray-400 dark:text-gray-500 font-bold">
                    Logo 1
                </div>
                <div
                    class="w-32 h-16 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center text-gray-400 dark:text-gray-500 font-bold">
                    Logo 2
                </div>
                <div
                    class="w-32 h-16 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center text-gray-400 dark:text-gray-500 font-bold">
