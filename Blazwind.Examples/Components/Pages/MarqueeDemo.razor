@page "/components/marquee"
@using Blazwind.Components.Badge
@using Blazwind.Components.Marquee

<PageTitle>Marquee Demo - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Marquee Component"
            Description="Continuous scrolling content component. Ideal for logo slider, ticker, testimonials."
