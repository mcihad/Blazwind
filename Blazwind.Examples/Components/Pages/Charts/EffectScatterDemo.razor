                    new List<double> { 12.0, 10.84 },
                    new List<double> { 7.0, 4.82 },
                    new List<double> { 5.0, 5.68 }
                },
                RippleEffect = new 
                {
                    brushType = "stroke",
                    scale = 4 // Ripple büyüklüğü
                },
                ItemStyle = new ChartItemStyle
                {
                    Color = "#3b82f6",
                    ShadowBlur = 10,
                    ShadowColor = "#3b82f6"
                }
            },
            // Arka plan için normal scatter
            new()
            {
                Type = ChartSeriesType.Scatter,
                Data = new List<object>
                {
                    new List<double> { 10.0, 8.04 },
