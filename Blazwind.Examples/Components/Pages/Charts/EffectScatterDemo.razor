@page "/charts/effect-scatter"
@using Blazwind.Components.Chart
@using Blazwind.Components.Card
@using Blazwind.Components.Layout
@using Blazwind.Components.Shared

<PageTitle>Effect Scatter - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Effect Scatter" 
            Description="Vurgulanması gereken noktalar için animasyonlu scatter grafiği. Genellikle haritalarda veya AI dikkat (attention) noktalarında kullanılır."
            Icon="fa-solid fa-bullseye"
            Color="BwColor.Primary" />

    <BwCard Title="AI Attention Map" Subtitle="Ripple efekti ile dikkat noktaları" Icon="fa-solid fa-wave-square" Color="BwColor.Info">
        <BwChart Options="_scatterOptions" Height="500px" />
    </BwCard>
</BwColumn>

@code {
    private ChartOptions _scatterOptions = new()
    {
        Title = new ChartTitle { Text = "Attention Map", Subtext = "Focus Areas" },
        Tooltip = new ChartTooltip { Trigger = ChartTooltipTrigger.Item },
        XAxis = new ChartAxis { Type = ChartAxisType.Value, BoundaryGap = false },
        YAxis = new ChartAxis { Type = ChartAxisType.Value, BoundaryGap = false },
        Series = new List<ChartSeries>
        {
            new()
            {
                Type = ChartSeriesType.EffectScatter,
