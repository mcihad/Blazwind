@page "/charts/polar"
@using Blazwind.Components.Chart
@using Blazwind.Components.Card
@using Blazwind.Components.Layout
@using Blazwind.Components.Shared

<PageTitle>Polar - Blazwind Charts</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Polar Grafik" 
            Description="Dairesel koordinat sisteminde veri görselleştirme."
            Icon="fa-solid fa-circle-dot"
            Color="BwColor.Success" />

    <BwRow Spacing="BwSpacing.Md" Wrap="true" Class="grid md:grid-cols-2">
        @* Polar Bar *@
        <BwCard Title="Polar Bar" Subtitle="Dairesel çubuk grafik." Icon="fa-solid fa-chart-bar" Color="BwColor.Primary">
            <BwChart Options="_polarBar" Height="350px" />
        </BwCard>

        @* Polar Line *@
        <BwCard Title="Polar Line" Subtitle="Dairesel çizgi grafik." Icon="fa-solid fa-chart-line" Color="BwColor.Info">
            <BwChart Options="_polarLine" Height="350px" />
        </BwCard>
    </BwRow>

    @* Stacked Polar *@
    <BwCard Title="Stacked Polar Bar" Subtitle="Yığılmış dairesel çubuk." Icon="fa-solid fa-layer-group" Color="BwColor.Warning">
        <BwChart Options="_stackedPolar" Height="450px" />
    </BwCard>
</BwColumn>

