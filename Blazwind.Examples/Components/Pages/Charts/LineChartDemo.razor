@page "/charts/line"
@using Blazwind.Components.Chart
@using Blazwind.Components.Card
@using Blazwind.Components.Layout
@using Blazwind.Components.Shared

<PageTitle>Çizgi Grafik - Blazwind Charts</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Çizgi Grafik (Line Chart)" 
            Description="Zaman serisi ve trend analizi için ideal grafik tipi."
            Icon="fa-solid fa-chart-line"
            Color="BwColor.Primary" />

    @* Temel Çizgi Grafik *@
    <BwCard Title="Temel Çizgi Grafik" Subtitle="Basit çizgi grafik örneği." Icon="fa-solid fa-chart-line" Color="BwColor.Primary">
        <BwChart Options="_basicLine" Height="350px" />
    </BwCard>

    <BwRow Spacing="BwSpacing.Md" Wrap="true" Cols="1" MdCols="2" LgCols="2">
        @* Smooth Çizgi *@
        <BwCard Title="Smooth Çizgi" Subtitle="Yumuşatılmış çizgi." Icon="fa-solid fa-wave-square" Color="BwColor.Info">
            <BwChart Options="_smoothLine" Height="280px" />
        </BwCard>

        @* Multi-Series *@
        <BwCard Title="Çoklu Seri" Subtitle="Birden fazla veri serisi." Icon="fa-solid fa-layer-group" Color="BwColor.Success">
            <BwChart Options="_multiLine" Height="280px" />
        </BwCard>
    </BwRow>

    @* Step Line *@
    <BwCard Title="Basamak Çizgisi" Subtitle="Step line grafik örnekleri." Icon="fa-solid fa-stairs" Color="BwColor.Warning">
        <BwChart Options="_stepLine" Height="350px" />
    </BwCard>

    @* Stacked Line *@
    <BwCard Title="Yığılmış Çizgi" Subtitle="Stacked line ile toplam gösterimi." Icon="fa-solid fa-layer-group" Color="BwColor.Danger">
        <BwChart Options="_stackedLine" Height="350px" />
    </BwCard>
</BwColumn>

