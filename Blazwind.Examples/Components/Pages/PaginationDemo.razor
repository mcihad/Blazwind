@page "/components/pagination"
@using Blazwind.Components.Badge
@using Blazwind.Components.Pagination

<PageTitle>Pagination Demo - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Pagination"
            Description="Pagination components for navigating large datasets."
            Icon="fa-solid fa-angles-right"
            Color="BwColor.Primary"/>

    <BwRow Spacing="BwSpacing.Lg" Class="grid lg:grid-cols-2 gap-6">

        @* Interactive Demo *@
        <BwCard Title="Interactive Example" Subtitle="Full-featured pagination experience"
                Icon="fa-solid fa-hand-pointer" Color="BwColor.Primary" Class="lg:col-span-2">
            <div
                class="flex flex-col items-center gap-6 py-8 bg-gray-50/50 rounded-lg border border-gray-100 border-dashed">

                <div class="text-center space-y-1">
                    <h3 class="text-2xl font-bold text-gray-900">Page @_interactivePage</h3>
                    <p class="text-gray-500">Total 150 items, @_pageSize items per page</p>
                </div>

                <BwPagination TotalItems="150"
                              @bind-PageSize="_pageSize"
                              @bind-CurrentPage="_interactivePage"
                              ShowPageSizeSelector="true"
                              ShowInfo="true"/>
            </div>
        </BwCard>

        @* Sizing Variants *@
        <BwCard Title="Size Options" Subtitle="Scalable structure for different areas" Icon="fa-solid fa-expand"
                Color="BwColor.Success">
            <div class="space-y-8">
                <div>
                    <div class="flex items-center gap-2 mb-3">
                        <BwBadge Color="BwColor.Secondary">Small</BwBadge>
                        <span class="text-xs text-gray-400">For constrained areas</span>
                    </div>
                    <BwPagination TotalItems="50" PageSize="10" CurrentPage="1" Size="BwSize.Small"
                                  ShowFirstLast="false"/>
                </div>

                <div class="border-t border-gray-100 pt-6">
                    <div class="flex items-center gap-2 mb-3">
                        <BwBadge Color="BwColor.Primary">Medium</BwBadge>
                        <span class="text-xs text-gray-400">Default size</span>
                    </div>
                    <BwPagination TotalItems="50" PageSize="10" CurrentPage="2" Size="BwSize.Medium"/>
                </div>

                <div class="border-t border-gray-100 pt-6">
                    <div class="flex items-center gap-2 mb-3">
                        <BwBadge Color="BwColor.Info">Large</BwBadge>
                        <span class="text-xs text-gray-400">Comfortable touch areas</span>
                    </div>
                    <BwPagination TotalItems="50" PageSize="10" CurrentPage="3" Size="BwSize.Large"/>
                </div>
            </div>
        </BwCard>



        @* Responsive / Compact Mode *@
        <BwCard Title="Responsive / Compact Mode" Subtitle="Input-based navigation for mobile optimization" Icon="fa-solid fa-mobile-screen"
                Color="BwColor.Dark">
             <div class="space-y-4">
                 <p class="text-sm text-gray-600">
                     By default, <code>Responsive="true"</code>, so it automatically switches to "Input" style on mobile.
                     You can force this style using <code>Compact="true"</code>.
                 </p>
                 
                 <div class="p-4 bg-white border border-gray-100 rounded-lg shadow-sm flex justify-center">
                     <div class="w-full max-w-xs">
                        <BwPagination TotalItems="100" 
                                      PageSize="10" 
                                      CurrentPage="5"
                                      Compact="true" />
                     </div>
                 </div>
                 
                 <div class="text-center text-xs text-gray-400">
                     (The example above is forced to Compact mode)
                 </div>
             </div>
        </BwCard>

    </BwRow>
</BwColumn>

@code {
    private int _interactivePage = 1;
    private int _pageSize = 10;
}
