@page "/components/barcode"
@using Blazwind.Components.Barcode
@using Blazwind.Components.Typography

<PageTitle>Barcode Demo - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Barcode Component"
            Description="Barcode generation component for asset, document and product tracking."
            Icon="fa-solid fa-barcode"
            Color="BwColor.Primary"/>

    @* Temel Kullanım *@
    <BwCard Title="Basic Usage" Subtitle="Different barcode formats." Icon="fa-solid fa-barcode"
            Color="BwColor.Primary">
        <BwRow Spacing="BwSpacing.Lg">
            <BwColumn Span="12" Md="4" Class="text-center">
                <BwBarcode Value="1234567890128" Format="BarcodeFormat.EAN13" Label="EAN-13 (Product)"/>
            </BwColumn>
            <BwColumn Span="12" Md="4" Class="text-center">
                <BwBarcode Value="BLAZWIND123" Format="BarcodeFormat.CODE128" Label="CODE-128 (General)"/>
            </BwColumn>
            <BwColumn Span="12" Md="4" Class="text-center">
                <BwBarcode Value="ABC-12345" Format="BarcodeFormat.CODE39" Label="CODE-39 (Logistics)"/>
            </BwColumn>
        </BwRow>
    </BwCard>

    <BwRow Spacing="BwSpacing.Md">
        @* Demirbaş Barkodu *@
        <BwColumn Span="12" Md="6">
            <BwCard Title="Asset Labeling" Subtitle="Corporate asset tracking labels." Icon="fa-solid fa-tag"
                    Color="BwColor.Success">
                <BwColumn Spacing="BwSpacing.Md">
                    <div class="p-4 border border-gray-200 rounded bg-white dark:bg-gray-900 dark:border-gray-700">
                        <div class="text-center mb-3">
                            <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-500 mb-1">SIVAS MUNICIPALITY
                            </BwTypography>
                            <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Semibold"
                                          Class="text-gray-900 dark:text-gray-100">IT DEPARTMENT
                            </BwTypography>
                        </div>
                        <BwBarcode Value="DMB-2026-00142" Format="BarcodeFormat.CODE128" Height="60" FontSize="12"/>
                        <div class="text-center mt-2">
                            <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-600 dark:text-gray-400">Laptop -
                                Dell Latitude
                            </BwTypography>
                        </div>
                    </div>

                    <div class="p-4 border border-gray-200 rounded bg-white dark:bg-gray-900 dark:border-gray-700">
                        <div class="text-center mb-3">
                            <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-500 mb-1">SIVAS MUNICIPALITY
                            </BwTypography>
                            <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Semibold"
                                          Class="text-gray-900 dark:text-gray-100">SECRETARIAT DEPARTMENT
                            </BwTypography>
                        </div>
                        <BwBarcode Value="DMB-2026-00287" Format="BarcodeFormat.CODE128" Height="60" FontSize="12"/>
                        <div class="text-center mt-2">
                            <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-600 dark:text-gray-400">Desk -
                                Office Desk
                            </BwTypography>
                        </div>
                    </div>
                </BwColumn>
            </BwCard>
        </BwColumn>

        @* Evrak Takip *@
        <BwColumn Span="12" Md="6">
            <BwCard Title="Document Tracking" Subtitle="Document number barcodes." Icon="fa-solid fa-file-lines"
                    Color="BwColor.Info">
                <BwColumn Spacing="BwSpacing.Md">
                    <div class="p-4 border border-dashed border-gray-300 rounded dark:border-gray-600">
                        <BwFlex AlignItems="BwCrossAxisAlignment.Start" Gap="BwSpacing.Md">
                            <BwBarcode Value="E2026001542" Format="BarcodeFormat.CODE128" Height="50" Width="1"
                                       FontSize="10" DisplayValue="false"/>
                            <div class="flex-1">
                                <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium">Petition</BwTypography>
                                <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-500">E2026001542</BwTypography>
                                <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-400 mt-1">01.01.2026 - 14:32
                                </BwTypography>
                            </div>
                        </BwFlex>
                    </div>

                    <div class="p-4 border border-dashed border-gray-300 rounded dark:border-gray-600">
                        <BwFlex AlignItems="BwCrossAxisAlignment.Start" Gap="BwSpacing.Md">
                            <BwBarcode Value="E2026001543" Format="BarcodeFormat.CODE128" Height="50" Width="1"
                                       FontSize="10" DisplayValue="false"/>
                            <div class="flex-1">
                                <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium">Request Form
                                </BwTypography>
                                <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-500">E2026001543</BwTypography>
                                <BwTypography Size="BwSize.ExtraSmall" Class="text-gray-400 mt-1">01.01.2026 - 15:18
                                </BwTypography>
                            </div>
                        </BwFlex>
                    </div>
                </BwColumn>
            </BwCard>
        </BwColumn>
    </BwRow>

    @* Özelleştirme *@
    <BwCard Title="Visual Customization" Subtitle="Color and size settings." Icon="fa-solid fa-palette"
            Color="BwColor.Warning">
        <BwRow Spacing="BwSpacing.Lg">
            <BwColumn Span="12" Md="4" Class="text-center">
                <BwBarcode Value="RENKLI" Format="BarcodeFormat.CODE128" LineColor="#1d4ed8" Background="#eff6ff"
                           Height="80" Label="Blue Theme"/>
            </BwColumn>
            <BwColumn Span="12" Md="4" Class="text-center">
                <BwBarcode Value="COMPACT" Format="BarcodeFormat.CODE128" Height="40" Width="1" FontSize="10" Margin="5"
                           Label="Compact"/>
            </BwColumn>
            <BwColumn Span="12" Md="4" Class="text-center">
                <BwBarcode Value="BUYUK" Format="BarcodeFormat.CODE128" Height="120" Width="3" FontSize="18"
                           Label="Large"/>
            </BwColumn>
        </BwRow>
    </BwCard>

    @* Dinamik Barkod *@
    <BwCard Title="Dynamic Barcode" Subtitle="Real-time barcode generation." Icon="fa-solid fa-keyboard"
            Color="BwColor.Danger">
        <BwColumn Spacing="BwSpacing.Md">
            <BwRow Spacing="BwSpacing.Md" CrossAxisAlignment="BwCrossAxisAlignment.End">
                <BwColumn Span="12">
                    <label class="block text-sm font-medium text-gray-700 mb-1 dark:text-gray-300">Barcode Value</label>
                    <input type="text"
                           class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-100"
                           @bind="_dynamicValue" @bind:event="oninput" placeholder="Enter value..."/>
                </BwColumn>
            </BwRow>

            @if (!string.IsNullOrEmpty(_dynamicValue))
            {
                <div
                    class="p-6 bg-white border border-gray-200 rounded text-center dark:bg-gray-800 dark:border-gray-700">
                    <BwBarcode Value="@_dynamicValue" Format="BarcodeFormat.CODE128" Height="80"/>
                </div>
            }
        </BwColumn>
    </BwCard>
</BwColumn>

@code {
    private string _dynamicValue = "BLAZWIND-2026";
}