@page "/components/countdown"
@using Blazwind.Components.Countdown

<PageTitle>Countdown Demo - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Countdown Component"
            Description="Modernly designed countdown component. Gradient backgrounds, shadow effects and full dark mode support."
            Icon="fa-solid fa-clock" Color="BwColor.Danger"/>

    <BwRow Spacing="BwSpacing.Md" Wrap="true" Class="grid md:grid-cols-2">
        <BwCard Title="Basic Usage" Subtitle="Countdown to date" Icon="fa-solid fa-calendar" Color="BwColor.Primary">
            <BwColumn Spacing="BwSpacing.Md" CrossAxisAlignment="BwCrossAxisAlignment.Center">
                <BwTypography Color="BwColor.Secondary">Time Remaining Until New Year:</BwTypography>
                <BwCountdown TargetDate="@_newYear" ShowLabels="true"/>
            </BwColumn>
        </BwCard>

        <BwCard Title="Duration Based" Subtitle="Countdown for specific duration" Icon="fa-solid fa-hourglass-half"
                Color="BwColor.Success">
            <BwColumn Spacing="BwSpacing.Md" CrossAxisAlignment="BwCrossAxisAlignment.Center">
                <BwTypography Color="BwColor.Secondary">Remaining Time (10 minutes):</BwTypography>
                <BwCountdown Duration="TimeSpan.FromMinutes(10)" Color="BwColor.Success"/>
            </BwColumn>
        </BwCard>
    </BwRow>

    <BwCard Title="Filled Variant - Gradient Styles" Subtitle="Eye-catching design with modern gradient backgrounds"
            Icon="fa-solid fa-fill-drip" Color="BwColor.Primary">
        <BwRow Spacing="BwSpacing.Lg" Wrap="true" MainAxisAlignment="BwMainAxisAlignment.Center">
            <BwCountdown Duration="TimeSpan.FromHours(1)" Variant="BwVariant.Filled" Color="BwColor.Primary"/>
            <BwCountdown Duration="TimeSpan.FromHours(1)" Variant="BwVariant.Filled" Color="BwColor.Success"/>
            <BwCountdown Duration="TimeSpan.FromHours(1)" Variant="BwVariant.Filled" Color="BwColor.Danger"/>
            <BwCountdown Duration="TimeSpan.FromHours(1)" Variant="BwVariant.Filled" Color="BwColor.Warning"/>
        </BwRow>
    </BwCard>

    <BwRow Spacing="BwSpacing.Md" Wrap="true" Class="grid md:grid-cols-2">
        <BwCard Title="Soft Variant" Subtitle="Soft background colors" Icon="fa-solid fa-feather" Color="BwColor.Info">
            <BwColumn Spacing="BwSpacing.Md" CrossAxisAlignment="BwCrossAxisAlignment.Center">
                <BwCountdown Duration="TimeSpan.FromMinutes(30)" Variant="BwVariant.Soft" Color="BwColor.Primary"/>
                <BwCountdown Duration="TimeSpan.FromMinutes(30)" Variant="BwVariant.Soft" Color="BwColor.Success"/>
                <BwCountdown Duration="TimeSpan.FromMinutes(30)" Variant="BwVariant.Soft" Color="BwColor.Danger"/>
            </BwColumn>
        </BwCard>

        <BwCard Title="Outline Variant" Subtitle="Bordered design" Icon="fa-regular fa-square" Color="BwColor.Warning">
            <BwColumn Spacing="BwSpacing.Md" CrossAxisAlignment="BwCrossAxisAlignment.Center">
                <BwCountdown Duration="TimeSpan.FromMinutes(45)" Variant="BwVariant.Outline" Color="BwColor.Primary"/>
                <BwCountdown Duration="TimeSpan.FromMinutes(45)" Variant="BwVariant.Outline" Color="BwColor.Warning"/>
            </BwColumn>
        </BwCard>
    </BwRow>

    <BwRow Spacing="BwSpacing.Md" Wrap="true" Class="grid md:grid-cols-2">
        <BwCard Title="Sizes" Subtitle="Small, Medium, Large, ExtraLarge" Icon="fa-solid fa-text-height"
                Color="BwColor.Secondary">
            <BwColumn Spacing="BwSpacing.Lg" CrossAxisAlignment="BwCrossAxisAlignment.Center">
                <BwColumn>
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary" Class="mb-2 text-center">Small
                    </BwTypography>
                    <BwCountdown Duration="TimeSpan.FromHours(1)" Size="BwSize.Small" Variant="BwVariant.Filled"
                                 Color="BwColor.Info"/>
                </BwColumn>
                <BwColumn>
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary" Class="mb-2 text-center">Medium
                    </BwTypography>
                    <BwCountdown Duration="TimeSpan.FromHours(1)" Size="BwSize.Medium" Variant="BwVariant.Filled"
                                 Color="BwColor.Info"/>
                </BwColumn>
                <BwColumn>
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary" Class="mb-2 text-center">Large
                    </BwTypography>
                    <BwCountdown Duration="TimeSpan.FromHours(1)" Size="BwSize.Large" Variant="BwVariant.Filled"
                                 Color="BwColor.Info"/>
                </BwColumn>
            </BwColumn>
        </BwCard>

        <BwCard Title="Customizations" Subtitle="Labeled and with milliseconds" Icon="fa-solid fa-cog"
                Color="BwColor.Primary">
            <BwColumn Spacing="BwSpacing.Lg" CrossAxisAlignment="BwCrossAxisAlignment.Center">
                <BwColumn>
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary" Class="mb-2 text-center">Labeled
                    </BwTypography>
                    <BwCountdown Duration="TimeSpan.FromHours(2)" ShowLabels="true" ShowDays="false"
                                 Variant="BwVariant.Soft" Color="BwColor.Primary"/>
                </BwColumn>
                <BwColumn>
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary" Class="mb-2 text-center">With
                        Milliseconds
                    </BwTypography>
                    <BwCountdown Duration="TimeSpan.FromMinutes(1)" ShowMilliseconds="true" ShowHours="false"
                                 ShowDays="false" Variant="BwVariant.Outline" Color="BwColor.Danger"/>
                </BwColumn>
            </BwColumn>
        </BwCard>
    </BwRow>
</BwColumn>

@code {
    private readonly DateTime _newYear = new(DateTime.Now.Year + 1, 1, 1);
}