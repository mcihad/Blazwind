@page "/components/grid"

<PageTitle>Grid - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="BwGrid"
            Description="CSS Grid based layout component. Supports XAML/MAUI style RowDefs and ColumnDefs definitions."
            Icon="fa-solid fa-table-cells"
            Color="BwColor.Primary"/>

    @* 1. XAML-Style Definitions *@
    <BwCard Title="XAML Style Definitions" Subtitle="RowDefs and ColumnDefs with proportional layout"
            Icon="fa-solid fa-grip" Color="BwColor.Primary">
        <BwColumn Spacing="BwSpacing.Md">
            <p class="text-sm text-gray-600 mb-2">ColumnDefs="*,2*,*" → Total 4 units (1:2:1 ratio)</p>
            <BwGrid ColumnDefs="*,2*,*" Gap="BwSpacing.Md">
                <div class="bg-blue-500 text-white p-4 rounded text-center font-medium">1 birim (*)</div>
                <div class="bg-blue-600 text-white p-4 rounded text-center font-medium">2 birim (2*)</div>
                <div class="bg-blue-500 text-white p-4 rounded text-center font-medium">1 birim (*)</div>
            </BwGrid>
        </BwColumn>
    </BwCard>

    @* 2. Star Ratios *@
    <BwCard Title="Proportional Distribution" Subtitle="Flexible widths with star (*) notation"
            Icon="fa-solid fa-arrows-left-right" Color="BwColor.Success">
        <BwColumn Spacing="BwSpacing.Lg">
            <div>
                <p class="text-sm text-gray-600 mb-2">ColumnDefs="*,*,*,*" → 4 equal pieces</p>
                <BwGrid ColumnDefs="*,*,*,*" Gap="BwSpacing.Sm">
                    @for (var i = 1; i <= 4; i++)
                    {
                        <div class="bg-emerald-500 text-white p-3 rounded text-center">@i</div>
                    }
                </BwGrid>
            </div>

            <div>
                <p class="text-sm text-gray-600 mb-2">ColumnDefs="*,2*,3*" → 6 units (1:2:3 ratio)</p>
                <BwGrid ColumnDefs="*,2*,3*" Gap="BwSpacing.Sm">
                    <div class="bg-green-400 text-white p-3 rounded text-center">1/6</div>
                    <div class="bg-green-500 text-white p-3 rounded text-center">2/6</div>
                    <div class="bg-green-600 text-white p-3 rounded text-center">3/6</div>
                </BwGrid>
            </div>

            <div>
                <p class="text-sm text-gray-600 mb-2">ColumnDefs="2*,3*,5*" → 10 birim (2:3:5 oranı)</p>
                <BwGrid ColumnDefs="2*,3*,5*" Gap="BwSpacing.Sm">
                    <div class="bg-teal-400 text-white p-3 rounded text-center">2/10</div>
                    <div class="bg-teal-500 text-white p-3 rounded text-center">3/10</div>
                    <div class="bg-teal-600 text-white p-3 rounded text-center">5/10</div>
                </BwGrid>
            </div>
        </BwColumn>
    </BwCard>

    @* 3. Auto + Star Combination *@
    <BwCard Title="Auto + Star Combination" Subtitle="Content-sized and flexible areas" Icon="fa-solid fa-expand"
            Color="BwColor.Warning">
        <BwColumn Spacing="BwSpacing.Md">
            <p class="text-sm text-gray-600 mb-2">ColumnDefs="Auto,*,Auto" → Edges sized by content, center flexible</p>
            <BwGrid ColumnDefs="Auto,*,Auto" Gap="BwSpacing.Md">
                <div class="bg-amber-500 text-white px-4 py-3 rounded text-center whitespace-nowrap">
                    <i class="fa-solid fa-bars mr-2"></i>Menü ve İçeriği Falan
                </div>
                <div class="bg-amber-600 text-white p-3 rounded text-center">
                    Esnek İçerik Alanı (*)
                </div>
                <div class="bg-amber-500 text-white px-4 py-3 rounded text-center whitespace-nowrap">
                    <i class="fa-solid fa-user mr-2"></i>Profil
                </div>
            </BwGrid>
        </BwColumn>
    </BwCard>

    @* 4. ColumnSpacing & RowSpacing *@
    <BwCard Title="ColumnSpacing & RowSpacing" Subtitle="Separate horizontal and vertical spacing"
            Icon="fa-solid fa-arrows-alt" Color="BwColor.Info">
        <BwColumn Spacing="BwSpacing.Lg">
            <div>
                <p class="text-sm text-gray-600 mb-2">ColumnSpacing="Xl" RowSpacing="Xs" → Wide horizontal, narrow
                    vertical spacing</p>
                <BwGrid ColumnDefs="*,*,*" ColumnSpacing="BwSpacing.Xl" RowSpacing="BwSpacing.Xs">
                    @for (var i = 1; i <= 6; i++)
                    {
                        <div class="bg-sky-500 text-white p-3 rounded text-center">@i</div>
                    }
                </BwGrid>
            </div>

            <div>
                <p class="text-sm text-gray-600 mb-2">ColumnSpacing="Xs" RowSpacing="Xl" → Narrow horizontal, wide
                    vertical spacing</p>
                <BwGrid ColumnDefs="*,*,*" ColumnSpacing="BwSpacing.Xs" RowSpacing="BwSpacing.Xl">
                    @for (var i = 1; i <= 6; i++)
                    {
                        <div class="bg-cyan-500 text-white p-3 rounded text-center">@i</div>
                    }
                </BwGrid>
            </div>

            <div>
                <p class="text-sm text-gray-600 mb-2">ColumnSpacing="None" RowSpacing="Lg" → Columns adjacent, rows
                    separated</p>
                <BwGrid ColumnDefs="*,*,*,*" ColumnSpacing="BwSpacing.None" RowSpacing="BwSpacing.Lg">
                    @for (var i = 1; i <= 8; i++)
                    {
                        <div
                            class="bg-indigo-500 text-white p-3 text-center border-r border-indigo-400 last:border-r-0">@i</div>
                    }
                </BwGrid>
            </div>
        </BwColumn>
    </BwCard>

    @* 5. Rows and Columns (2D Grid) *@
    <BwCard Title="2D Grid Layout" Subtitle="RowDefs and ColumnDefs used together" Icon="fa-solid fa-border-all"
            Color="BwColor.Danger">
        <BwColumn Spacing="BwSpacing.Md">
            <p class="text-sm text-gray-600 mb-2">RowDefs="Auto,*,Auto" ColumnDefs="*,3*,*" with page layout</p>
            <BwGrid RowDefs="Auto,*,Auto" ColumnDefs="*,3*,*" Gap="BwSpacing.Sm" Class="h-64">
                @* Header - spans all columns *@
                <BwGridItem Row="0" Column="0" ColumnSpan="3"
                            Class="bg-red-500 text-white p-3 rounded flex items-center justify-center">
                    <i class="fa-solid fa-heading mr-2"></i> Header (Auto, 3 sütun)
                </BwGridItem>

                @* Sidebar *@
                <BwGridItem Row="1" Column="0"
                            Class="bg-red-400 text-white p-3 rounded flex items-center justify-center">
                    Sidebar (*)
                </BwGridItem>

                @* Main Content *@
                <BwGridItem Row="1" Column="1"
                            Class="bg-red-600 text-white p-3 rounded flex items-center justify-center">
                    Main Content (3*)
                </BwGridItem>

                @* Right Panel *@
                <BwGridItem Row="1" Column="2"
                            Class="bg-red-400 text-white p-3 rounded flex items-center justify-center">
                    Panel (*)
                </BwGridItem>

                @* Footer *@
                <BwGridItem Row="2" Column="0" ColumnSpan="3"
                            Class="bg-red-500 text-white p-3 rounded flex items-center justify-center">
                    <i class="fa-solid fa-copyright mr-2"></i> Footer (Auto, 3 sütun)
                </BwGridItem>
            </BwGrid>
        </BwColumn>
    </BwCard>

    @* 6. GridItem with Spans *@
    <BwCard Title="GridItem with Span" Subtitle="RowSpan and ColumnSpan usage"
            Icon="fa-solid fa-up-right-and-down-left-from-center" Color="BwColor.Primary">
        <BwColumn Spacing="BwSpacing.Md">
            <p class="text-sm text-gray-600 mb-2">4x3 grid, some cells occupy multiple areas</p>
            <BwGrid ColumnDefs="*,*,*,*" RowDefs="*,*,*" Gap="BwSpacing.Sm" Class="h-48">
                <BwGridItem Row="0" Column="0" RowSpan="2"
                            Class="bg-violet-600 text-white p-3 rounded flex items-center justify-center text-sm">
                    2 Satır
                </BwGridItem>
                <BwGridItem Row="0" Column="1" ColumnSpan="2"
                            Class="bg-violet-400 text-white p-3 rounded flex items-center justify-center text-sm">
                    2 Sütun
                </BwGridItem>
                <BwGridItem Row="0" Column="3"
                            Class="bg-violet-500 text-white p-3 rounded flex items-center justify-center text-sm">
                    1x1
                </BwGridItem>
                <BwGridItem Row="1" Column="1"
                            Class="bg-violet-500 text-white p-3 rounded flex items-center justify-center text-sm">
                    1x1
                </BwGridItem>
                <BwGridItem Row="1" Column="2" RowSpan="2" ColumnSpan="2"
                            Class="bg-violet-700 text-white p-3 rounded flex items-center justify-center text-sm">
                    2x2
                </BwGridItem>
                <BwGridItem Row="2" Column="0" ColumnSpan="2"
                            Class="bg-violet-400 text-white p-3 rounded flex items-center justify-center text-sm">
                    2 Sütun
                </BwGridItem>
            </BwGrid>
        </BwColumn>
    </BwCard>

    @* 7. Legacy: Fixed Columns *@
    <BwCard Title="Fixed Column Count (Legacy)" Subtitle="Equal columns with Columns parameter"
            Icon="fa-solid fa-columns" Color="BwColor.Secondary">
        <BwColumn Spacing="BwSpacing.Md">
            <p class="text-sm text-gray-600 mb-2">Columns="4" - 4 equal width columns</p>
            <BwGrid Columns="4" Gap="BwSpacing.Md">
                @for (var i = 1; i <= 8; i++)
                {
                    <div class="bg-slate-500 text-white p-4 rounded text-center font-medium">@i</div>
                }
            </BwGrid>
        </BwColumn>
    </BwCard>

    @* 8. Legacy: MinItemWidth *@
    <BwCard Title="MinItemWidth (Legacy)" Subtitle="Automatic responsive with minimum item width"
            Icon="fa-solid fa-arrows-alt-h" Color="BwColor.Secondary">
        <BwColumn Spacing="BwSpacing.Md">
            <p class="text-sm text-gray-600 mb-2">MinItemWidth="200px" - At least 200px, as many columns as fit</p>
            <BwGrid MinItemWidth="200px" Gap="BwSpacing.Md">
                @for (var i = 1; i <= 6; i++)
                {
                    <div class="bg-gray-500 text-white p-6 rounded shadow-sm">
                        <i class="fa-solid fa-cube text-2xl mb-2"></i>
                        <p class="font-medium">Öğe @i</p>
                    </div>
                }
            </BwGrid>
        </BwColumn>
    </BwCard>
</BwColumn>
