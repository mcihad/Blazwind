@namespace Blazwind.Components.Pages
@using Blazwind.Components.Button
@using Blazwind.Components.Shared
@inject NavigationManager NavigationManager
@inherits BwBase

<div class="@CombineClasses("bw-not-found")" style="@Style" id="@Id" @attributes="AdditionalAttributes">
    <!-- 404 Visual -->
    <div class="bw-not-found-visual">
        <h1 class="bw-not-found-404">
            404
        </h1>
    </div>

    <!-- Content -->
    <div class="bw-not-found-content">
        <h2 class="bw-not-found-title">
            @Title
        </h2>

        @if (CustomContent != null)
        {
            @CustomContent
        }
        else
        {
            <p class="bw-not-found-description">
                @Description
            </p>
        }

        <!-- Actions -->
        <div class="bw-not-found-actions">
            @if (CustomAction != null)
            {
                @CustomAction
            }
            else
            {
                <BwButton OnClick="@(() => NavigationManager.NavigateTo(ActionHref))" Variant="BwVariant.Filled"
                    Color="BwColor.Primary" Size="BwSize.Large" Icon="fa-solid fa-arrow-left" Class="px-8">
                    @ActionText
                </BwButton>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Page Not Found";
    [Parameter] public string Description { get; set; } = "Sorry, we couldn't find the page you're looking for. It might have been moved or doesn't exist.";
    [Parameter] public string ActionText { get; set; } = "Go Back Home";
    [Parameter] public string ActionHref { get; set; } = "/";
    [Parameter] public RenderFragment? CustomContent { get; set; }
    [Parameter] public RenderFragment? CustomAction { get; set; }
    // Removed Class and Style parameters (inherited)
}