@namespace Blazwind.Components.Layout
@inherits BwBase

@{
    var flexClass = Expanded ? "flex-1" : "";
    var growClass = Flex > 0 ? $"grow-[{Flex}]" : "";
}

<div class="@CombineClasses(flexClass)" style="@(Flex > 0 ? $"flex-grow: {Flex}; {Style}" : Style)" id="@Id"
     @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool Expanded { get; set; }

    [Parameter]
    public int Flex { get; set; }

}
