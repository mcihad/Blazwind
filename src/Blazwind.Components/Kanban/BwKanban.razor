@namespace Blazwind.Components.Kanban
@inherits BwBase
@using Blazwind.Components.Shared
@using Blazwind.Components

<div class="@CombineClasses("bw-kanban")" style="@Style" id="@Id"
    @attributes="AdditionalAttributes">
    @foreach (var column in Columns)
    {
        var columnColor = column.Color ?? BwColor.Secondary;
        var isWipExceeded = column.MaxItems.HasValue && (column.Items?.Count ?? 0) > column.MaxItems.Value;
        
        var headerBorderClass = isWipExceeded 
            ? "bw-kanban-shadow-danger" 
            : columnColor switch
            {
                BwColor.Primary => "bw-kanban-border-primary",
                BwColor.Success => "bw-kanban-border-success",
                BwColor.Danger => "bw-kanban-border-danger",
                BwColor.Warning => "bw-kanban-border-warning",
                BwColor.Info => "bw-kanban-border-info",
                _ => "bw-kanban-border-default"
            };

        if (column.IsCollapsed)
        {
            @* Collapsed State *@
            <div class="bw-kanban-column-collapsed"
                 @onclick="() => column.IsCollapsed = false"
                 @ondragover="HandleDragOverColumn" @ondragover:preventDefault @ondrop="() => HandleDrop(column)">
                
                <div class="bw-kanban-column-collapsed-counter">
                    @(column.Items?.Count ?? 0)
                </div>

                <div class="bw-kanban-column-collapsed-title">
                     @column.Title
                </div>
                
                 @if (isWipExceeded)
                 {
                     <div class="w-2 h-2 rounded-full bg-red-500 animate-pulse mb-2"></div>
                 }
            </div>
        }
        else
        {
            @* Expanded State *@
            <div class="bw-kanban-column" 
                @ondragover="HandleDragOverColumn"
                @ondragover:preventDefault 
                @ondrop="() => HandleDrop(column)">
                
                @* Header *@
                <div class="bw-kanban-header @headerBorderClass">
                    <div class="flex items-center gap-2">
                         <button class="text-gray-400 hover:text-gray-600 dark:text-gray-500 dark:hover:text-gray-300 transition-colors"
                                 @onclick="() => column.IsCollapsed = true">
                             <i class="fa-solid fa-compress-alt text-xs"></i>
                         </button>
                    
                        @if (!string.IsNullOrEmpty(column.Icon))
                        {
                            <i class="@column.Icon text-gray-400 dark:text-gray-500"></i>
                        }
                        <h3 class="bw-kanban-header-title">@column.Title</h3>
                        
                        <span class="bw-kanban-header-counter @(isWipExceeded ? "bw-kanban-header-wip-exceeded" : "")">
                            @(column.Items?.Count ?? 0)
                            @if (column.MaxItems.HasValue)
                            {
                                <span class="opacity-50">/@column.MaxItems</span>
                            }
                        </span>
                    </div>
                    @if (column.HeaderExtra != null)
                    {
                        @column.HeaderExtra
                    }
                </div>

                @* Item List *@
                <div class="bw-kanban-items-container">
                    @if (column.Items != null && column.Items.Any())
                    {
                        foreach (var item in column.Items)
                        {
                            var isDragging = _draggedItem == item;
                            var isTarget = _targetItem == item;
                            
                            @* Drop Zone Indicator *@
                            @if (isTarget && _draggedItem != item)
                            {
                                <div class="bw-kanban-drop-indicator"></div>
                            }
                        
                            <div class="bw-kanban-item group @(isDragging ? "bw-kanban-item-dragging" : "") @(isTarget ? "bw-kanban-item-target" : "")"
                                draggable="true" 
                                @ondragstart="() => HandleDragStart(item, column)"
                                @ondragenter="() => HandleDragEnterItem(item)"
                                @onclick="() => HandleItemClick(item)">
                                
                                @if (ItemTemplate != null)
                                {
                                    @ItemTemplate(item)
                                }
                                else
                                {
                                    <div class="space-y-2">
                                        @if (!string.IsNullOrEmpty(item.Title))
                                        {
                                            <h4 class="bw-kanban-item-title">@item.Title</h4>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <p class="bw-kanban-item-description">@item.Description</p>
                                        }
                                        @if (item.Tags?.Any() == true)
                                        {
                                            <div class="flex flex-wrap gap-1">
                                                @foreach (var tag in item.Tags)
                                                {
                                                    <span class="bw-kanban-tag">@tag</span>
                                                }
                                            </div>
                                        }
                                        @if (item.Assignee != null || item.DueDate != null)
                                        {
                                            <div class="bw-kanban-item-footer">
                                                @if (item.Assignee != null)
                                                {
                                                    <div class="flex items-center gap-1">
                                                        @if (!string.IsNullOrEmpty(item.Assignee.Avatar))
                                                        {
                                                            <img src="@item.Assignee.Avatar" class="w-6 h-6 rounded-full" alt="@item.Assignee.Name" />
                                                        }
                                                        else
                                                        {
                                                            <div class="w-6 h-6 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-xs font-medium text-gray-600 dark:text-gray-300">
                                                                @item.Assignee.Name?.FirstOrDefault()
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                                @if (item.DueDate != null)
                                                {
                                                    var isOverdue = item.DueDate < DateTime.Today;
                                                    <span class="text-xs @(isOverdue ? "text-red-500 dark:text-red-400" : "text-gray-400 dark:text-gray-500")">
                                                        <i class="fa-regular fa-calendar mr-1"></i>@item.DueDate.Value.ToString("dd MMM")
                                                    </span>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                         @* Empty State *@
                        <div class="bw-kanban-empty">
                            <i class="fa-solid fa-inbox text-xl opacity-50"></i>
                            <span class="text-xs font-medium">No Items</span>
                        </div>
                    }
                </div>

                @if (ShowAddButton)
                {
                    <div class="p-3 pt-0">
                        <button type="button"
                            class="bw-kanban-add-btn"
                            @onclick="() => HandleAddClick(column)">
                            <i class="fa-solid fa-plus"></i>
                            <span>Kart Ekle</span>
                        </button>
                    </div>
                }
            </div>
        }
    }
</div>

