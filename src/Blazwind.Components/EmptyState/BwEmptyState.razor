@namespace Blazwind.Components.EmptyState
@inherits BwBase

<div class="@CombineClasses("bw-empty-state")" style="@Style" id="@Id" @attributes="AdditionalAttributes">
    <div class="mb-4">
        @if (Image != null)
        {
            @Image
        }
        else if (!string.IsNullOrEmpty(Icon))
        {
            <div class="bw-empty-state-icon">
                <i class="@Icon text-3xl"></i>
            </div>
        }
        else
        {
            @* Default Empty Illustration *@
            <svg class="mx-auto h-24 w-24 bw-empty-state-svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                 aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1"
                      d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
        }
    </div>

    @if (!string.IsNullOrEmpty(Title))
    {
        <h3 class="bw-empty-state-title">@Title</h3>
    }

    @if (!string.IsNullOrEmpty(Description))
    {
        <p class="bw-empty-state-description">@Description</p>
    }

    @if (ChildContent != null)
    {
        <div class="mt-6">
            @ChildContent
        </div>
    }
</div>

@code {

    [Parameter]
    public string? Title { get; set; } = "Veri BulunamadÄ±";

    [Parameter]
    public string? Description { get; set; }

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public RenderFragment? Image { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}
