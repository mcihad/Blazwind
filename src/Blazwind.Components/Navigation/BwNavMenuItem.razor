@namespace Blazwind.Components.Navigation
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.JSInterop
@inject NavigationManager NavigationManager
@inherits BwBase

@{
    UpdateActiveState();
    var itemClass = _isActive ? "bw-nav-item bw-nav-item-active" : "bw-nav-item";
    
    var _context = new BwNavMenuItemContext
    {
        Label = Label,
        Href = Href,
        Icon = Icon,
        Badge = Badge,
        IsActive = _isActive,
        Level = Level
    };
}

@if (ItemTemplate != null || _cascadedItemTemplate != null)
{
    var template = ItemTemplate ?? _cascadedItemTemplate;
    <span @onclick="HandleClick" id="@Id" class="@Class" style="@Style" @attributes="AdditionalAttributes">
        @template!(_context)
    </span>
}
else
{
    <a href="@Href" 
       class="@CombineClasses(itemClass)"
       style="padding-left: @(Level * 12 + 12)px; @Style"
       id="@Id" @attributes="AdditionalAttributes"
       data-active="@_isActive.ToString().ToLower()"
       data-nav-item
       @onclick="HandleClick">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <i class="@Icon bw-nav-item-icon"></i>
        }
        <span class="flex-1">@Label</span>
        @if (Badge != null)
        {
            <span class="bw-nav-item-badge">@Badge</span>
        }
    </a>
}

@implements IDisposable

@code {
    [CascadingParameter(Name = "ParentGroupId")] public string? ParentGroupId { get; set; }
    [CascadingParameter(Name = "Level")] public int Level { get; set; } = 0;
    [CascadingParameter(Name = "NavItemTemplate")] 
    public RenderFragment<BwNavMenuItemContext>? _cascadedItemTemplate { get; set; }
    
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Href { get; set; } = "";
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? Badge { get; set; }
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.Prefix;
    
    /// <summary>Custom template for this menu item. Overrides cascaded template.</summary>
    [Parameter] public RenderFragment<BwNavMenuItemContext>? ItemTemplate { get; set; }
    
    [Inject] IJSRuntime JS { get; set; } = default!;

    private bool _isActive;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        NavigationManager.LocationChanged += OnLocationChanged;
        UpdateActiveState();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        UpdateActiveState();
        StateHasChanged();
    }

    private async Task HandleClick()
    {
        try 
        {
            await JS.InvokeVoidAsync("Blazwind.Sidebar.close");
        }
        catch
        {
        }
    }

    private void UpdateActiveState()
    {
        var currentUri = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        var targetUri = Href.TrimStart('/');
        
        if (Match == NavLinkMatch.All)
        {
            _isActive = string.Equals(currentUri, targetUri, StringComparison.OrdinalIgnoreCase);
        }
        else
        {
            _isActive = (!string.IsNullOrEmpty(targetUri) && currentUri.StartsWith(targetUri, StringComparison.OrdinalIgnoreCase)) || 
                       (string.IsNullOrEmpty(targetUri) && string.IsNullOrEmpty(currentUri));
        }
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _isActive)
        {
             await Task.Delay(50); 
             await JS.InvokeVoidAsync("Blazwind.Nav.expandParentsForActive");
        }
    }
}
