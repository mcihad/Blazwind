@namespace Blazwind.Components.Navigation
@using Blazwind.Components.Shared
@inherits BwBase

@{
    var colorClass = Color switch
    {
        BwColor.Success => "bw-fab-success",
        BwColor.Warning => "bw-fab-warning",
        BwColor.Danger => "bw-fab-danger",
        BwColor.Info => "bw-fab-info",
        BwColor.Primary => "bw-fab-primary",
        _ => "bw-fab-secondary"
    };
}

<button type="button" 
        class="@CombineClasses("bw-fab-item", colorClass)"
        style="@Style" id="@Id" @attributes="AdditionalAttributes"
        disabled="@IsDisabled"
        title="@Tooltip"
        @onclick="OnClick">
    <i class="@Icon"></i>
    @if (!string.IsNullOrEmpty(Label))
    {
        <span class="bw-fab-item-label">@Label</span>
    }
</button>

@code {
    [Parameter] public string Icon { get; set; } = "fa-solid fa-star";
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Tooltip { get; set; }
    [Parameter] public BwColor Color { get; set; } = BwColor.Secondary;
    [Parameter] public bool IsDisabled { get; set; } = false;
    [Parameter] public EventCallback OnClick { get; set; }
}
