@namespace Blazwind.Components.Icon
@using Blazwind.Components.Shared
@inherits BwBase

@{
    var colorClass = $"bw-icon-{Color.ToString().ToLower()}";
}

<i class="@CombineClasses($"{Name} {SizeClass} {colorClass} {(Spin ? "fa-spin" : "")}")" id="@Id" style="@Style"
   @attributes="AdditionalAttributes"></i>

@code {

    [Parameter]
    public string? Name { get; set; }

    [Parameter]
    public BwSize Size { get; set; } = BwSize.Medium;

    [Parameter]
    public BwColor Color { get; set; } = BwColor.Dark;

    [Parameter]
    public bool Spin { get; set; }

    private string SizeClass => Size switch
    {
        BwSize.ExtraSmall => "text-xs",
        BwSize.Small => "text-sm",
        BwSize.Medium => "text-base",
        BwSize.Large => "text-lg",
        BwSize.ExtraLarge => "text-xl",
        _ => "text-base"
    };

}
