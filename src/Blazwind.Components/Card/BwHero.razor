@namespace Blazwind.Components.Card
@using Blazwind.Components.Shared
@inherits BwBase

@{
    var colorClass = Color switch
    {
        BwColor.Primary => "bw-hero-primary",
        BwColor.Secondary => "bw-hero-secondary",
        BwColor.Success => "bw-hero-success",
        BwColor.Danger => "bw-hero-danger",
        BwColor.Warning => "bw-hero-warning",
        BwColor.Info => "bw-hero-info",
        BwColor.Dark => "bw-hero-dark",
        _ => "bw-hero-primary"
    };
}

<div class="@CombineClasses($"bw-hero {colorClass}")" style="@Style" id="@Id" @attributes="AdditionalAttributes">
    <div class="flex items-center gap-3 mb-2">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <div class="bw-hero-icon-wrapper">
                <i class="@Icon text-xl"></i>
            </div>
        }
        <h1 class="text-2xl font-bold">@Title</h1>
    </div>
    @if (!string.IsNullOrEmpty(Description))
    {
        <p class="bw-hero-text-muted">@Description</p>
    }
    @if (ChildContent != null)
    {
        @ChildContent
    }
</div>

@code {

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string? Description { get; set; }

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public BwColor Color { get; set; } = BwColor.Primary;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}
