@namespace Blazwind.Components.MegaMenu
@using Blazwind.Components.Shared

<div class="@Class">
    @if (!string.IsNullOrEmpty(Title))
    {
        <div class="flex items-center gap-2 px-2 py-1.5 mb-1">
            @if (!string.IsNullOrEmpty(Icon))
            {
                <i class="@Icon text-xs text-gray-400 dark:text-gray-500"></i>
            }
            <span class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">@Title</span>
        </div>
    }
    <div class="space-y-0.5">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? Class { get; set; }
}