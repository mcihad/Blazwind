@page "/charts/scatter"
@using Blazwind.Components.Chart
@using Blazwind.Components.Card
@using Blazwind.Components.Layout
@using Blazwind.Components.Shared

<PageTitle>Dağılım Grafik - Blazwind Charts</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Dağılım Grafik (Scatter Chart)" 
            Description="Korelasyon ve dağılım analizi için ideal grafik tipi."
            Icon="fa-solid fa-braille"
            Color="BwColor.Danger" />

    @* Temel Scatter *@
    <BwCard Title="Temel Dağılım Grafik" Subtitle="Basic scatter plot." Icon="fa-solid fa-braille" Color="BwColor.Primary">
        <BwChart Options="_basicScatter" Height="400px" />
    </BwCard>

    @* Bubble Chart *@
    <BwCard Title="Bubble Chart" Subtitle="Boyutlu dağılım grafik." Icon="fa-solid fa-circle" Color="BwColor.Info">
        <BwChart Options="_bubbleScatter" Height="400px" />
    </BwCard>
</BwColumn>

