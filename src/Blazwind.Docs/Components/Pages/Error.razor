@page "/Error"
@using System.Diagnostics

<PageTitle>Hata - Blazwind</PageTitle>

<div class="max-w-lg mx-auto text-center py-12">
    <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <i class="fa-solid fa-triangle-exclamation text-red-600 text-2xl"></i>
    </div>

    <h1 class="text-2xl font-bold text-gray-900 mb-2">An Error Occurred</h1>
    <p class="text-gray-500 mb-6">
        An unexpected error occurred while processing your request.
    </p>

    @if (ShowRequestId)
    {
        <div class="bg-gray-100 rounded p-4 mb-6 text-left">
            <p class="text-xs text-gray-500 uppercase tracking-wider mb-1">Request ID</p>
            <code class="text-sm text-gray-700 break-all">@RequestId</code>
        </div>
    }

    <div class="flex justify-center gap-3">
        <a href="/"
           class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded transition-colors">
            <i class="fa-solid fa-home"></i> Home
        </a>
        <button type="button" onclick="location.reload()"
                class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 rounded transition-colors">
            <i class="fa-solid fa-arrow-rotate-right"></i> Refresh
        </button>
    </div>
</div>

@code {
    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized()
    {
        RequestId = Activity.Current?.Id;
    }
}