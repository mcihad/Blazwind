@page "/components/padding-margin"
@using Blazwind.Components.Typography

<PageTitle>Padding & Margin Demo - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Padding & Margin Wrapper"
        Description="Layout and spacing management with Flutter-style wrapper components." Icon="fa-solid fa-expand"
        Color="BwColor.Info" />

    <BwRow Spacing="BwSpacing.Lg" Wrap="true">
        @* Padding Example *@
        <BwColumn Span="12" Md="6">
            <BwCard Title="Padding Wrapper" Subtitle="Provides inner spacing by wrapping content"
                Icon="fa-solid fa-box-open" Color="BwColor.Info">
                <BwPadding All="BwSpacing.Md"
                    Style="background-color: var(--bw-info-50); border: 1px solid var(--bw-info-200); border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-card-bg); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-color-border); text-align: center;">
                        This box has padding around it (All=Md)
                    </div>
                </BwPadding>

                <BwMargin Top="BwSpacing.Md">
                    <BwColumn Spacing="BwSpacing.Xs">
                        <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Semibold" Color="BwColor.Dark">
                            Flutter-like usage:</BwTypography>
                        <div
                            style="background-color: var(--bw-gray-800); color: var(--bw-gray-300); padding: 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.75rem; font-family: monospace; overflow-x: auto;">
                            &lt;BwPadding All="BwSpacing.Md"&gt;<br />
                            &nbsp;&nbsp;&lt;ChildContent /&gt;<br />
                            &lt;/BwPadding&gt;
                        </div>
                    </BwColumn>
                </BwMargin>
            </BwCard>
        </BwColumn>

        @* Margin Example *@
        <BwColumn Span="12" Md="6">
            <BwCard Title="Margin Wrapper" Subtitle="Provides outer spacing by wrapping content"
                Icon="fa-solid fa-arrows-left-right-to-line" Color="BwColor.Warning">
                <div
                    style="background-color: var(--bw-warning-50); border: 1px solid var(--bw-warning-200); border-radius: var(--bw-radius-default); overflow: hidden;">
                    <div
                        style="background-color: var(--bw-warning-200); padding: 0.5rem; text-align: center; font-size: 0.75rem; color: var(--bw-warning-800);">
                        Container Boundary</div>
                    <BwMargin All="BwSpacing.Md">
                        <div
                            style="background-color: var(--bw-card-bg); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-color-border); text-align: center; box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);">
                            This box has margin around it (All=Md)
                        </div>
                    </BwMargin>
                    <div
                        style="background-color: var(--bw-warning-200); padding: 0.5rem; text-align: center; font-size: 0.75rem; color: var(--bw-warning-800);">
                        Container Boundary</div>
                </div>
            </BwCard>
        </BwColumn>
    </BwRow>

    @* Complex Usage *@
    <BwCard Title="Complex Usage (Specific Sides)" Subtitle="Horizontal, Vertical and Special Edges"
        Icon="fa-solid fa-layer-group" Color="BwColor.Primary">
        <BwColumn Spacing="BwSpacing.Md">
            <div
                style="background-color: var(--bw-gray-100); border-radius: var(--bw-radius-default); border: 1px solid var(--bw-color-border);">
                <BwPadding Horizontal="BwSpacing.Xl" Vertical="BwSpacing.Sm">
                    <div
                        style="background-color: var(--bw-card-bg); padding: 0.75rem; border-radius: var(--bw-radius-default); text-align: center; box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);">
                        Horizontal=Xl (Wide side spacing)<br />
                        Vertical=Sm (Narrow vertical spacing)
                    </div>
                </BwPadding>
            </div>

            <div
                style="background-color: var(--bw-gray-100); border-radius: var(--bw-radius-default); border: 1px solid var(--bw-color-border);">
                <BwPadding Left="BwSpacing.Xxl" Top="BwSpacing.Md">
                    <div
                        style="background-color: var(--bw-card-bg); padding: 0.75rem; border-radius: var(--bw-radius-default); text-align: center; box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);">
                        Left=Xxl, Top=Md (Asymmetric)
                    </div>
                </BwPadding>
            </div>
        </BwColumn>
    </BwCard>

    @* Nested Example *@
    <BwCard Title="Nested Usage" Subtitle="Padding and Margin Brotherhood" Icon="fa-solid fa-cubes-stacked"
        Color="BwColor.Success">
        <div style="background-color: var(--bw-gray-900); border-radius: var(--bw-radius-default); color: white;">
            <BwPadding All="BwSpacing.Md">
                <div
                    style="background-color: var(--bw-gray-800); border-radius: var(--bw-radius-default); border: 1px solid var(--bw-gray-700);">
                    <BwMargin Bottom="BwSpacing.Lg">
                        <BwPadding All="BwSpacing.Sm"
                            Style="background-color: rgba(16, 185, 129, 0.1); text-align: center;">
                            Margin Bottom: Large
                        </BwPadding>
                    </BwMargin>

                    <BwPadding All="BwSpacing.Sm"
                        Style="background-color: rgba(59, 130, 246, 0.1); text-align: center;">
                        Sub content
                    </BwPadding>
                </div>
            </BwPadding>
        </div>
    </BwCard>
</BwColumn>