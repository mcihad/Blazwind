@page "/components/layout"
@using Blazwind.Components.Layout
@using Blazwind.Components.Typography
@using Blazwind.Components.Card
@using Blazwind.Components.Alert
@using Blazwind.Components.Shared

<PageTitle>Layout Demo - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="Row & Column Layout"
        Description="Flutter-like flexbox-based layout components. Row provides horizontal, Column provides vertical layout."
        Icon="fa-solid fa-table-columns" Color="BwColor.Primary" />

    @* BwRow Examples *@
    <BwCard Title="BwRow - Horizontal Layout" Subtitle="Arranges items horizontally (flex-row)."
        Icon="fa-solid fa-arrows-left-right" Color="BwColor.Primary">
        <BwColumn Spacing="BwSpacing.Md">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Default (MainAxisAlignment: Start)
                    </BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        1</div>
                    <div
                        style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        2</div>
                    <div
                        style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        3</div>
                </BwRow>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">MainAxisAlignment: Center</BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm" MainAxisAlignment="BwMainAxisAlignment.Center"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        1</div>
                    <div
                        style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        2</div>
                    <div
                        style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        3</div>
                </BwRow>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">MainAxisAlignment: SpaceBetween
                    </BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm" MainAxisAlignment="BwMainAxisAlignment.SpaceBetween"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        1</div>
                    <div
                        style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        2</div>
                    <div
                        style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        3</div>
                </BwRow>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">MainAxisAlignment: SpaceEvenly
                    </BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm" MainAxisAlignment="BwMainAxisAlignment.SpaceEvenly"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        1</div>
                    <div
                        style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        2</div>
                    <div
                        style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        3</div>
                </BwRow>
            </div>
        </BwColumn>
    </BwCard>

    @* BwColumn Examples *@
    <BwCard Title="BwColumn - Vertical Layout" Subtitle="Arranges items vertically (flex-col)."
        Icon="fa-solid fa-arrows-up-down" Color="BwColor.Success">
        <BwRow Spacing="BwSpacing.Md" Cols="1" MdCols="3">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Spacing: Sm</BwTypography>
                </BwMargin>
                <BwColumn Spacing="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        A</div>
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        B</div>
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        C</div>
                </BwColumn>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Spacing: Md</BwTypography>
                </BwMargin>
                <BwColumn Spacing="BwSpacing.Md"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        A</div>
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        B</div>
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        C</div>
                </BwColumn>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Spacing: Lg</BwTypography>
                </BwMargin>
                <BwColumn Spacing="BwSpacing.Lg"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-danger-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        A</div>
                    <div
                        style="background-color: var(--bw-danger-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        B</div>
                    <div
                        style="background-color: var(--bw-danger-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        C</div>
                </BwColumn>
            </div>
        </BwRow>
    </BwCard>

    @* CrossAxisAlignment *@
    <BwCard Title="CrossAxisAlignment" Subtitle="Cross-axis alignment (align-items)." Icon="fa-solid fa-align-center"
        Color="BwColor.Warning">
        <BwColumn Spacing="BwSpacing.Md">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">CrossAxisAlignment: Start</BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm" CrossAxisAlignment="BwCrossAxisAlignment.Start"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default); height: 6rem;">
                    <div
                        style="background-color: var(--bw-secondary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Short</div>
                    <div
                        style="background-color: var(--bw-secondary-500); color: white; padding: 0.5rem 1rem 1.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Long</div>
                    <div
                        style="background-color: var(--bw-secondary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Short</div>
                </BwRow>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">CrossAxisAlignment: Center
                    </BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm" CrossAxisAlignment="BwCrossAxisAlignment.Center"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default); height: 6rem;">
                    <div
                        style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Short</div>
                    <div
                        style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem 1.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Long</div>
                    <div
                        style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Short</div>
                </BwRow>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">CrossAxisAlignment: Stretch
                    </BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm" CrossAxisAlignment="BwCrossAxisAlignment.Stretch"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default); height: 6rem;">
                    <div
                        style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); display: flex; align-items: center;">
                        Stretch</div>
                    <div
                        style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); display: flex; align-items: center;">
                        Stretch</div>
                    <div
                        style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); display: flex; align-items: center;">
                        Stretch</div>
                </BwRow>
            </div>
        </BwColumn>
    </BwCard>

    @* BwExpanded *@
    <BwCard Title="BwExpanded" Subtitle="Flexible element that fills remaining space (flex-1)."
        Icon="fa-solid fa-expand" Color="BwColor.Danger">
        <BwColumn Spacing="BwSpacing.Md">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">One Expanded element</BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Fixed</div>
                    <BwExpanded Expanded="true"
                        Style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Expanded (Fills Remaining Space)
                    </BwExpanded>
                    <div
                        style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                        Fixed</div>
                </BwRow>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Two Expanded elements (equal
                        distribution)</BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <BwExpanded Expanded="true"
                        Style="background-color: var(--bw-info-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Left (1/2)
                    </BwExpanded>
                    <BwExpanded Expanded="true"
                        Style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Right (1/2)
                    </BwExpanded>
                </BwRow>
            </div>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Flex ratios (1:2:1)</BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <BwExpanded Flex="1"
                        Style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Flex 1
                    </BwExpanded>
                    <BwExpanded Flex="2"
                        Style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Flex 2
                    </BwExpanded>
                    <BwExpanded Flex="1"
                        Style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Flex 1
                    </BwExpanded>
                </BwRow>
            </div>
        </BwColumn>
    </BwCard>

    @* Wrap *@
    <BwCard Title="Wrap (Wrapping)" Subtitle="Items move to next line when they don't fit."
        Icon="fa-solid fa-text-width" Color="BwColor.Info">
        <BwColumn Spacing="BwSpacing.Md">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Wrap: true</BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Sm" Wrap="true"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    @for (var i = 1; i <= 12; i++)
                    {
                        <div
                            style="background-color: var(--bw-info-500); color: white; padding: 0.75rem 1.5rem; border-radius: var(--bw-radius-default);">
                            @i</div>
                    }
                </BwRow>
            </div>
        </BwColumn>
    </BwCard>

    @* Responsive Grid *@
    <BwCard Title="Responsive Grid System" Subtitle="Use Cols, SmCols, MdCols, etc. to switch to CSS Grid layout."
        Icon="fa-solid fa-border-all" Color="BwColor.Secondary">
        <BwColumn Spacing="BwSpacing.Md">
            <BwAlert Type="BwAlertType.Info" ShowIcon="true" Title="Quick Grid">
                When you use Cols, SmCols, etc., the row automatically switches to display: grid.
                You don't need to manually add grid classes. Max 8 columns supported using these helpers.
            </BwAlert>

            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Responsive: 1 col mobile, 2 cols tablet,
                        4 cols desktop</BwTypography>
                </BwMargin>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.ExtraSmall" Color="BwColor.Secondary">
                        <code>&lt;BwRow Cols="1" MdCols="2" LgCols="4" ...&gt;</code>
                    </BwTypography>
                </BwMargin>
                <BwRow Spacing="BwSpacing.Md" Cols="1" MdCols="2" LgCols="4"
                    Style="background-color: var(--bw-gray-100); padding: 0.75rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-secondary-500); color: white; padding: 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Item 1</div>
                    <div
                        style="background-color: var(--bw-secondary-500); color: white; padding: 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Item 2</div>
                    <div
                        style="background-color: var(--bw-secondary-500); color: white; padding: 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Item 3</div>
                    <div
                        style="background-color: var(--bw-secondary-500); color: white; padding: 1rem; border-radius: var(--bw-radius-default); text-align: center;">
                        Item 4</div>
                </BwRow>
            </div>
        </BwColumn>
    </BwCard>
</BwColumn>