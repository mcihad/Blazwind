@page "/components/flex"
@using Blazwind.Components.Typography
@using Blazwind.Components.Shared

<PageTitle>Flex - Blazwind</PageTitle>

<BwColumn Spacing="BwSpacing.Lg">
    <BwHero Title="BwFlex"
        Description="Layout component that fully encapsulates the CSS Flexbox system. Create professional flex layouts without knowing Tailwind."
        Icon="fa-solid fa-arrows-left-right-to-line" Color="BwColor.Primary" />

    @* 1. Temel Kullanım *@
    <BwCard Title="Basic Usage" Subtitle="Simple flex container example" Color="BwColor.Primary">
        <BwFlex Gap="BwSpacing.Md">
            <div
                style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                Item 1</div>
            <div
                style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                Item 2</div>
            <div
                style="background-color: var(--bw-primary-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">
                Item 3</div>
        </BwFlex>
    </BwCard>

    @* 2. Direction *@
    <BwCard Title="Flex Direction" Subtitle="Direction control: row, column and reverse variants" Color="BwColor.Info">
        <BwRow Spacing="BwSpacing.Lg">
            <BwColumn Span="12" Md="6">
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Row
                        (Default)</BwTypography>
                </BwMargin>
                <BwFlex Direction="BwFlexDirection.Row" Gap="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 1rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        1</div>
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        2</div>
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        3</div>
                </BwFlex>
            </BwColumn>
            <BwColumn Span="12" Md="6">
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Row Reverse
                    </BwTypography>
                </BwMargin>
                <BwFlex Direction="BwFlexDirection.RowReverse" Gap="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 1rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        1</div>
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        2</div>
                    <div
                        style="background-color: var(--bw-info-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        3</div>
                </BwFlex>
            </BwColumn>
            <BwColumn Span="12" Md="6">
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Column
                    </BwTypography>
                </BwMargin>
                <BwFlex Direction="BwFlexDirection.Column" Gap="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 1rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        1</div>
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        2</div>
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        3</div>
                </BwFlex>
            </BwColumn>
            <BwColumn Span="12" Md="6">
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Column
                        Reverse</BwTypography>
                </BwMargin>
                <BwFlex Direction="BwFlexDirection.ColumnReverse" Gap="BwSpacing.Sm"
                    Style="background-color: var(--bw-gray-100); padding: 1rem; border-radius: var(--bw-radius-default);">
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        1</div>
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        2</div>
                    <div
                        style="background-color: var(--bw-info-600); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                        3</div>
                </BwFlex>
            </BwColumn>
        </BwRow>
    </BwCard>

    @* 3. Justify Content *@
    <BwCard Title="Justify Content (Main Axis Alignment)" Subtitle="Distribution of items on the main axis"
        Color="BwColor.Success">
        <BwColumn Spacing="BwSpacing.Md">
            @foreach (var justify in Enum.GetValues<BwMainAxisAlignment>())
            {
                <div>
                    <BwMargin Bottom="BwSpacing.Xs">
                        <BwTypography Size="BwSize.ExtraSmall" Weight="BwFontWeight.Medium" Color="BwColor.Gray">@justify
                        </BwTypography>
                    </BwMargin>
                    <BwFlex JustifyContent="@justify" Gap="BwSpacing.Sm"
                        Style="background-color: var(--bw-success-50); padding: 0.75rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-success-200);">
                        <div
                            style="background-color: var(--bw-success-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            A</div>
                        <div
                            style="background-color: var(--bw-success-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            B</div>
                        <div
                            style="background-color: var(--bw-success-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            C</div>
                    </BwFlex>
                </div>
            }
        </BwColumn>
    </BwCard>

    @* 4. Align Items *@
    <BwCard Title="Align Items (Cross Axis Alignment)" Subtitle="Alignment of items on the cross axis"
        Color="BwColor.Warning">
        <BwRow Spacing="BwSpacing.Md">
            @foreach (var align in Enum.GetValues<BwCrossAxisAlignment>())
            {
                <BwColumn Span="12" Md="4">
                    <BwMargin Bottom="BwSpacing.Xs">
                        <BwTypography Size="BwSize.ExtraSmall" Weight="BwFontWeight.Medium" Color="BwColor.Gray">@align
                        </BwTypography>
                    </BwMargin>
                    <BwFlex AlignItems="@align" Gap="BwSpacing.Sm"
                        Style="background-color: var(--bw-warning-50); padding: 0.75rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-warning-200); height: 6rem;">
                        <div
                            style="background-color: var(--bw-warning-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            Short</div>
                        <div
                            style="background-color: var(--bw-warning-500); color: white; padding: 1rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            Long</div>
                        <div
                            style="background-color: var(--bw-warning-500); color: white; padding: 0.5rem 0.75rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            Medium</div>
                    </BwFlex>
                </BwColumn>
            }
        </BwRow>
    </BwCard>

    @* 5. Wrap & Gap *@
    <BwCard Title="Wrap and Gap" Subtitle="Row wrapping and spacing control" Color="BwColor.Secondary">
        <BwRow Spacing="BwSpacing.Lg">
            <BwColumn Span="12" Md="6">
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Wrap + Gap
                        Medium</BwTypography>
                </BwMargin>
                <BwFlex Wrap="BwFlexWrap.Wrap" Gap="BwSpacing.Md"
                    Style="background-color: var(--bw-gray-100); padding: 1rem; border-radius: var(--bw-radius-default);">
                    @for (var i = 1; i <= 12; i++)
                    {
                        <div
                            style="background-color: var(--bw-gray-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            Item @i</div>
                    }
                </BwFlex>
            </BwColumn>
            <BwColumn Span="12" Md="6">
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Wrap + Gap
                        Large</BwTypography>
                </BwMargin>
                <BwFlex Wrap="BwFlexWrap.Wrap" Gap="BwSpacing.Lg"
                    Style="background-color: var(--bw-gray-100); padding: 1rem; border-radius: var(--bw-radius-default);">
                    @for (var i = 1; i <= 8; i++)
                    {
                        <div
                            style="background-color: var(--bw-gray-700); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            Item @i</div>
                    }
                </BwFlex>
            </BwColumn>
            <BwColumn Span="12">
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Separate X
                        and Y Gap (GapX=8, GapY=2)</BwTypography>
                </BwMargin>
                <BwFlex Wrap="BwFlexWrap.Wrap" GapX="8" GapY="2"
                    Style="background-color: var(--bw-gray-100); padding: 1rem; border-radius: var(--bw-radius-default);">
                    @for (var i = 1; i <= 10; i++)
                    {
                        <div
                            style="background-color: var(--bw-gray-800); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">
                            Item @i</div>
                    }
                </BwFlex>
            </BwColumn>
        </BwRow>
    </BwCard>

    @* 6. Flex Item - Grow & Shrink *@
    <BwCard Title="Flex Item: Grow and Shrink" Subtitle="Growth and shrinking behavior of items" Color="BwColor.Danger">
        <BwColumn Spacing="BwSpacing.Md">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Grow=0 (Default - Does not grow)</BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-danger-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-danger-200);">
                    <BwFlexItem Grow="0" Style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Grow 0</BwFlexItem>
                    <BwFlexItem Grow="0" Style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Grow 0</BwFlexItem>
                    <BwFlexItem Grow="0" Style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Grow 0</BwFlexItem>
                </BwFlex>
            </div>
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Grow=1 (Equal Growth)</BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-danger-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-danger-200);">
                    <BwFlexItem Grow="1" Style="background-color: var(--bw-danger-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Grow 1</BwFlexItem>
                    <BwFlexItem Grow="1" Style="background-color: var(--bw-danger-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Grow 1</BwFlexItem>
                    <BwFlexItem Grow="1" Style="background-color: var(--bw-danger-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Grow 1</BwFlexItem>
                </BwFlex>
            </div>
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Different Grow Values (1, 2, 1)</BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-danger-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-danger-200);">
                    <BwFlexItem Grow="1" Style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">1</BwFlexItem>
                    <BwFlexItem Grow="2" Style="background-color: var(--bw-danger-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">2</BwFlexItem>
                    <BwFlexItem Grow="1" Style="background-color: var(--bw-danger-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">1</BwFlexItem>
                </BwFlex>
            </div>
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">Shrink=0 (No shrinking - Overflow)</BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-danger-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-danger-200); overflow-x: auto;">
                    <BwFlexItem Shrink="0" Style="background-color: var(--bw-danger-400); color: white; padding: 0.5rem 2rem; border-radius: var(--bw-radius-default); white-space: nowrap;">Shrink 0 -
                        Long content
                    </BwFlexItem>
                    <BwFlexItem Shrink="0" Style="background-color: var(--bw-danger-400); color: white; padding: 0.5rem 2rem; border-radius: var(--bw-radius-default); white-space: nowrap;">Shrink 0 -
                        Long content
                    </BwFlexItem>
                    <BwFlexItem Shrink="0" Style="background-color: var(--bw-danger-400); color: white; padding: 0.5rem 2rem; border-radius: var(--bw-radius-default); white-space: nowrap;">Shrink 0 -
                        Long content
                    </BwFlexItem>
                </BwFlex>
            </div>
        </BwColumn>
    </BwCard>

    @* 7. Flex Item - Basis *@
    <BwCard Title="Flex Item: Basis" Subtitle="Initial size control" Color="BwColor.Info">
        <BwColumn Spacing="BwSpacing.Md">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Ratio with Basis (1/4, 1/2, 1/4)
                    </BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-info-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-info-200);">
                    <BwFlexItem Basis="1/4" Style="background-color: var(--bw-info-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">1/4</BwFlexItem>
                    <BwFlexItem Basis="1/2" Style="background-color: var(--bw-info-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">1/2</BwFlexItem>
                    <BwFlexItem Basis="1/4" Style="background-color: var(--bw-info-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">1/4</BwFlexItem>
                </BwFlex>
            </div>
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Basis=0 + Grow (Equal distribution)
                    </BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-info-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-info-200);">
                    <BwFlexItem Basis="0" Grow="1" Style="background-color: var(--bw-info-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">Equal
                    </BwFlexItem>
                    <BwFlexItem Basis="0" Grow="1" Style="background-color: var(--bw-info-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">Equal
                        Distribution
                    </BwFlexItem>
                    <BwFlexItem Basis="0" Grow="1" Style="background-color: var(--bw-info-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">Equal
                    </BwFlexItem>
                </BwFlex>
            </div>
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Px based Basis (200px)
                    </BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-info-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-info-200);">
                    <BwFlexItem Basis="200px" Style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">200px
                    </BwFlexItem>
                    <BwFlexItem Grow="1" Style="background-color: var(--bw-success-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default); text-align: center;">Grow 1 (Remaining
                        space)
                    </BwFlexItem>
                </BwFlex>
            </div>
        </BwColumn>
    </BwCard>

    @* 8. Flex Item - Order *@
    <BwCard Title="Flex Item: Order" Subtitle="Visual ordering control" Color="BwColor.Success">
        <BwColumn Spacing="BwSpacing.Md">
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        DOM order: A, B, C - Visual order: C, A, B
                    </BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-success-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-success-200);">
                    <BwFlexItem Order="2" Style="background-color: var(--bw-success-500); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">A (Order 2)</BwFlexItem>
                    <BwFlexItem Order="3" Style="background-color: var(--bw-success-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">B (Order 3)</BwFlexItem>
                    <BwFlexItem Order="1" Style="background-color: var(--bw-success-700); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">C (Order 1)</BwFlexItem>
                </BwFlex>
            </div>
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Order -9999 (first) and 9999 (last)
                    </BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Sm" Style="background-color: var(--bw-success-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-success-200);">
                    <BwFlexItem Style="background-color: var(--bw-success-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Normal 1</BwFlexItem>
                    <BwFlexItem Order="9999" Style="background-color: var(--bw-success-600); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Last</BwFlexItem>
                    <BwFlexItem Style="background-color: var(--bw-success-400); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">Normal 2</BwFlexItem>
                    <BwFlexItem Order="-9999" Style="background-color: var(--bw-success-700); color: white; padding: 0.5rem 1rem; border-radius: var(--bw-radius-default);">First</BwFlexItem>
                </BwFlex>
            </div>
        </BwColumn>
    </BwCard>

    @* 9. Flex Item - Align Self *@
    <BwCard Title="Flex Item: Align Self" Subtitle="Individual item alignment override" Color="BwColor.Warning">
        <BwFlex AlignItems="BwCrossAxisAlignment.Start" Gap="BwSpacing.Sm"
            Style="background-color: var(--bw-warning-50); padding: 1rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-warning-200); height: 8rem;">
            <BwFlexItem Style="background-color: var(--bw-warning-400); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default);">Start (default)</BwFlexItem>
            <BwFlexItem AlignSelf="BwAlignSelf.Center" Style="background-color: var(--bw-warning-500); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default);">Center
            </BwFlexItem>
            <BwFlexItem AlignSelf="BwAlignSelf.End" Style="background-color: var(--bw-warning-600); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default);">End</BwFlexItem>
            <BwFlexItem AlignSelf="BwAlignSelf.Stretch" Style="background-color: var(--bw-warning-700); color: white; padding: 0.25rem 0.75rem; border-radius: var(--bw-radius-default);">Stretch
            </BwFlexItem>
        </BwFlex>
    </BwCard>

    @* 10. Inline Flex *@
    <BwCard Title="Inline Flex" Subtitle="Inline flex usage" Color="BwColor.Secondary">
        <BwTypography Color="BwColor.Dark">
            This is a paragraph. It contains an
            <BwFlex Inline="true" Gap="BwSpacing.Xs" AlignItems="BwCrossAxisAlignment.Center"
                Style="background-color: var(--bw-secondary-100); padding: 0.125rem 0.5rem; border-radius: var(--bw-radius-default);">
                <span style="color: var(--bw-secondary-600); font-weight: 500;">inline</span>
                <i class="fa-solid fa-check" style="color: var(--bw-secondary-500); font-size: 0.75rem;"></i>
            </BwFlex>
            flex element. It does not break the text flow.
        </BwTypography>
    </BwCard>

    @* 11. Real-world Örnekleri *@
    <BwCard Title="Real-world Examples" Subtitle="Practical usage scenarios" Color="BwColor.Primary">
        <BwColumn Spacing="BwSpacing.Lg">
            @* Media Card *@
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Media Card
                    </BwTypography>
                </BwMargin>
                <BwFlex Gap="BwSpacing.Md" Style="background-color: var(--bw-card-bg); border: 1px solid var(--bw-color-border); padding: 1rem; border-radius: var(--bw-radius-default); box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);">
                    <div
                        style="width: 5rem; height: 5rem; background: linear-gradient(to bottom right, var(--bw-primary-400), var(--bw-primary-600)); border-radius: var(--bw-radius-default); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; flex-shrink: 0;">
                        <i class="fa-solid fa-image"></i>
                    </div>
                    <BwFlexItem Grow="1">
                        <BwFlex Direction="BwFlexDirection.Column" Gap="BwSpacing.Xs">
                            <BwTypography Weight="BwFontWeight.Semibold" Color="BwColor.Dark">Title</BwTypography>
                            <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Subtitle or description text goes here.</BwTypography>
                            <BwFlex Gap="BwSpacing.Sm" Style="margin-top: 0.5rem;">
                                <BwButton Size="BwSize.Small" Variant="BwVariant.Filled">Edit</BwButton>
                                <BwButton Size="BwSize.Small" Variant="BwVariant.Outline">Delete</BwButton>
                            </BwFlex>
                        </BwFlex>
                    </BwFlexItem>
                </BwFlex>
            </div>

            @* Navigation Bar *@
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Navigation Bar
                    </BwTypography>
                </BwMargin>
                <BwFlex JustifyContent="BwMainAxisAlignment.SpaceBetween" AlignItems="BwCrossAxisAlignment.Center"
                    Style="background-color: var(--bw-gray-900); color: white; padding: 0.75rem 1.5rem; border-radius: var(--bw-radius-default);">
                    <BwFlex Gap="BwSpacing.Sm" AlignItems="BwCrossAxisAlignment.Center">
                        <i class="fa-solid fa-wind" style="font-size: 1.25rem; color: var(--bw-primary-400);"></i>
                        <span style="font-weight: 700;">Blazwind</span>
                    </BwFlex>
                    <BwFlex Gap="BwSpacing.Md">
                        <a href="#" style="color: var(--bw-gray-300); text-decoration: none; transition: color 0.2s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='var(--bw-gray-300)'">Home</a>
                        <a href="#" style="color: var(--bw-gray-300); text-decoration: none; transition: color 0.2s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='var(--bw-gray-300)'">Components</a>
                        <a href="#" style="color: var(--bw-gray-300); text-decoration: none; transition: color 0.2s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='var(--bw-gray-300)'">Documentation</a>
                    </BwFlex>
                    <BwButton Size="BwSize.Small" Variant="BwVariant.Filled">Login</BwButton>
                </BwFlex>
            </div>

            @* Centering *@
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Absolute Centering (Hem yatay hem dikey)
                    </BwTypography>
                </BwMargin>
                <BwFlex JustifyContent="BwMainAxisAlignment.Center" AlignItems="BwCrossAxisAlignment.Center"
                    Style="background: linear-gradient(to bottom right, var(--bw-secondary-500), var(--bw-danger-500)); height: 10rem; border-radius: var(--bw-radius-default);">
                    <BwFlex Direction="BwFlexDirection.Column" AlignItems="BwCrossAxisAlignment.Center"
                        Gap="BwSpacing.Sm">
                        <i class="fa-solid fa-rocket" style="font-size: 2.25rem; color: white;"></i>
                        <span style="color: white; font-size: 1.125rem; font-weight: 600;">Perfect Centering</span>
                    </BwFlex>
                </BwFlex>
            </div>

            @* Footer *@
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Footer Layout
                    </BwTypography>
                </BwMargin>
                <BwFlex Wrap="BwFlexWrap.Wrap" JustifyContent="BwMainAxisAlignment.SpaceBetween" Gap="BwSpacing.Lg"
                    Style="background-color: var(--bw-gray-100); padding: 1.5rem; border-radius: var(--bw-radius-default);">
                    <BwFlexItem Basis="200px" Grow="1">
                        <BwTypography Weight="BwFontWeight.Bold" Color="BwColor.Dark" Style="margin-bottom: 0.5rem;">About Us</BwTypography>
                        <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">Blazwind is a component library designed for modern Blazor
                            applications.</BwTypography>
                    </BwFlexItem>
                    <BwFlexItem Basis="200px" Grow="1">
                        <BwTypography Weight="BwFontWeight.Bold" Color="BwColor.Dark" Style="margin-bottom: 0.5rem;">Links</BwTypography>
                        <BwFlex Direction="BwFlexDirection.Column" Gap="BwSpacing.Xs">
                            <a href="#" style="font-size: 0.875rem; color: var(--bw-primary-600); text-decoration: none;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">Documentation</a>
                            <a href="#" style="font-size: 0.875rem; color: var(--bw-primary-600); text-decoration: none;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">GitHub</a>
                            <a href="#" style="font-size: 0.875rem; color: var(--bw-primary-600); text-decoration: none;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">Support</a>
                        </BwFlex>
                    </BwFlexItem>
                    <BwFlexItem Basis="200px" Grow="1">
                        <BwTypography Weight="BwFontWeight.Bold" Color="BwColor.Dark" Style="margin-bottom: 0.5rem;">Contact</BwTypography>
                        <BwFlex Direction="BwFlexDirection.Column" Gap="BwSpacing.Xs">
                            <BwTypography Size="BwSize.Small" Color="BwColor.Secondary"><i
                                    class="fa-solid fa-envelope" style="margin-right: 0.5rem;"></i>info@blazwind.com</BwTypography>
                            <BwTypography Size="BwSize.Small" Color="BwColor.Secondary"><i class="fa-solid fa-phone" style="margin-right: 0.5rem;"></i>+90 555 123
                                4567</BwTypography>
                        </BwFlex>
                    </BwFlexItem>
                </BwFlex>
            </div>

            @* Holy Grail Layout *@
            <div>
                <BwMargin Bottom="BwSpacing.Xs">
                    <BwTypography Size="BwSize.Small" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                        Holy Grail Layout
                    </BwTypography>
                </BwMargin>
                <BwFlex Direction="BwFlexDirection.Column" Gap="BwSpacing.None"
                    Style="border: 1px solid var(--bw-color-border); border-radius: var(--bw-radius-default); overflow: hidden;">
                    @* Header *@
                    <div style="background-color: var(--bw-primary-600); color: white; padding: 0.75rem 1rem; text-align: center; font-weight: 600;">Header</div>
                    @* Main *@
                    <BwFlex Gap="BwSpacing.None" Style="min-height: 12.5rem;">
                        <div style="background-color: var(--bw-gray-200); padding: 0.75rem 1rem; width: 8rem; flex-shrink: 0;">Sidebar</div>
                        <BwFlexItem Grow="1" Style="background-color: var(--bw-card-bg); padding: 0.75rem 1rem;">
                            <BwTypography Weight="BwFontWeight.Bold" Style="margin-bottom: 0.5rem;">Main Content</BwTypography>
                            <BwTypography Color="BwColor.Secondary" Size="BwSize.Small">This area is reserved for your content. Thanks to flex
                                grow, it occupies all remaining space.</BwTypography>
                        </BwFlexItem>
                        <div style="background-color: var(--bw-gray-200); padding: 0.75rem 1rem; width: 8rem; flex-shrink: 0;">Aside</div>
                    </BwFlex>
                    @* Footer *@
                    <div style="background-color: var(--bw-gray-800); color: white; padding: 0.75rem 1rem; text-align: center; font-size: 0.875rem;">Footer</div>
                </BwFlex>
            </div>
        </BwColumn>
    </BwCard>

    @* 12. Align Content (Çok satırlı) *@
    <BwCard Title="Align Content (Multi-line Alignment)"
        Subtitle="Distribution of rows on the cross axis when wrap is active" Color="BwColor.Info">
        <BwRow Spacing="BwSpacing.Md">
            @foreach (var alignContent in new[] { BwAlignContent.Start, BwAlignContent.Center, BwAlignContent.End,
                        BwAlignContent.SpaceBetween, BwAlignContent.SpaceAround, BwAlignContent.Stretch })
            {
                <BwColumn Span="12" Md="4">
                    <BwMargin Bottom="BwSpacing.Xs">
                        <BwTypography Size="BwSize.ExtraSmall" Weight="BwFontWeight.Medium" Color="BwColor.Secondary">
                            @alignContent
                        </BwTypography>
                    </BwMargin>
                    <BwFlex Wrap="BwFlexWrap.Wrap" AlignContent="@alignContent" Gap="BwSpacing.Sm"
                        Style="background-color: var(--bw-primary-50); padding: 0.75rem; border-radius: var(--bw-radius-default); border: 1px solid var(--bw-primary-200); height: 10rem;">
                        @for (var i = 1; i <= 6; i++)
                        {
                            <div style="background-color: var(--bw-primary-500); color: white; padding: 0.25rem 1rem; border-radius: var(--bw-radius-default); font-size: 0.875rem;">@i</div>
                        }
                    </BwFlex>
                </BwColumn>
            }
        </BwRow>
    </BwCard>
</BwColumn>