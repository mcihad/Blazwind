@using Blazwind.Components.Drawer
@using Blazwind.Components.Typography
@using Blazwind.Components.Button
@using Blazwind.Components.Layout
@using Blazwind.Components.Card
@using Blazwind.Components.Shared

@inject DrawerService DrawerService

<BwColumn Spacing="BwSpacing.Md">
    <BwTypography Size="BwSize.Large" Weight="BwFontWeight.Medium">@Message</BwTypography>
    
    <BwCard Color="BwColor.Secondary">
        <BwTypography Size="BwSize.Small" Color="BwColor.Secondary">
            This is a simple drawer content example. You can place any Razor component inside the drawer.
        </BwTypography>
    </BwCard>
    
    <BwButton Color="BwColor.Secondary" Text="Close" OnClick="Close" />
</BwColumn>

@code {
    [Parameter] public string Message { get; set; } = "Drawer content";
    
    private void Close()
    {
        DrawerService.Close();
    }
}
